---
	import type { AstroComponent } from '@lucide/astro';

	interface Props {
		label: string;
		url: string;
		Icon?: AstroComponent;
		ariaLabel?: string;
		className?: string;
		download?: string;
	}

	const { label, url, Icon, ariaLabel, className, download } = Astro.props;

	const styles = {
		baseButton:
			'group relative overflow-hidden transform transition-transform duration-300 ease-in-out hover:scale-105 active:scale-95  flex p-[2px] items-center justify-center rounded-3xl bg-gray-500/40 dark:bg-black/50 text-black dark:text-white',
		gradientBorder:
			'absolute inset-[-1000%] transition-all duration-500 ease-in-out opacity-50 group-hover:opacity-100 z-0 animate-[spin_2s_linear_infinite] bg-[conic-gradient(from_90deg_at_50%_50%,#ff2056_0%,#2A1A4A_50%,#ff2056_100%)]',
	};
---
<a
	href={url}
	download={download}
	aria-label={ariaLabel}
	class={styles.baseButton + ' ' + className}
	title="Descargar"
>
	<div
		class="z-10 flex h-full w-full items-center justify-center gap-2 rounded-3xl bg-white px-4 py-2 dark:bg-black"
	>
		{Icon && <Icon />}
		{label}
	</div>

	<span class={styles.gradientBorder} aria-hidden="true"></span>
</a>
