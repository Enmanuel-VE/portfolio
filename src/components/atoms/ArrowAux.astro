---
	import { ChevronDown } from '@lucide/astro';
---
<a
	class="absolute bottom-[calc(var(--spacing)*4+8vh)] sm:bottom-4 left-1/2 z-15 -translate-x-1/2 transform cursor-pointer"
	href="#projects"
	aria-label="Ir a proyectos"
	title="Ir a proyectos"
	id="arrow-aux"
	role="link"
>
	<ChevronDown
		class="animate-bounce-pulse h-8 w-8 text-black/50 dark:text-white/75"
	/>
</a>

<style>
	@keyframes bouncePulse {
		from {
			transform: translateY(0) scale(1);
			opacity: 0.5;
		}
		to {
			transform: translateY(-25%) scale(1.25);
			opacity: 1;
		}
	}

	.animate-bounce-pulse {
		animation: bouncePulse 1s ease-in-out alternate infinite;
		&:hover {
			animation-play-state: paused;
		}
	}

	#arrow-aux {
		animation: disapper-animation linear both;
		animation-timeline: scroll(root block);
		animation-range: 0 100px;
	}

	@keyframes disapper-animation {
		from {
			opacity: 1;
		}
		99% {
			opacity: 0;
		}
		to {
			display: none;
		}
	}
</style>
