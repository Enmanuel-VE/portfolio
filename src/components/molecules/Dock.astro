---
	import { Home } from '@lucide/astro';
---
<nav
	class="dock flex sticky nav-base-styles text-sm border-t text-center sm:hidden w-full h-[8dvh] p-1 bottom-0 z-60"
	role="navigation"
>
	<div
		class=" flex flex-row justify-evenly text-[clamp(0px,3.5vw,16px)] items-center w-full gap-2 dark:text-white"
	>
		<a class="nav-link" href="#about-me-section">
			<div>Sobre mi</div></a
		>
		<a class="nav-link" href="#projects-section"
			><div>Proyectos</div></a
		>
		<a class="nav-link" href="#home-section">
			<div>
				<Home/>
			</div>
		</a>
		<a class="nav-link" href="#certificates-section">
			<div>Certificados</div></a
		>
		<a class="nav-link" href="#contacts-section">
			<div>Contactos</div></a
		>
	</div>
</nav>

<script>
	import activeSectionObserver from '../../client/activeSectionObserver';

	activeSectionObserver(['.dock'], '.dock');
</script>

<style>
	.nav-link {
		height: 100%;
		width: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		transition: 300ms transform ease-in-out;
	}

	.nav-link.active {
		transform: scale(1.05) translateY(-4px);
	}

	.nav-link::after {
		content: '';
		position: absolute;
		width: 30%;
		height: 3px;
		border-radius: 3px;
		left: 50%;
		transform: translateX(-50%) scaleX(0);
		bottom: 5px;
		background-color: var(--color-rose-500);
		transition: transform 300ms ease-in-out;
		box-shadow: 0 0 10px var(--color-rose-500);
	}

	.nav-link.active::after {
		transform: translateX(-50%) scaleX(1);
	}
</style>

<script>
</script>
