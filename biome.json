{
	"$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",

	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},

	"files": {
		"ignoreUnknown": true,
		"includes": [
			"src/**/*",
			"public/**/*",
			"!**/dist",
			"!**/node_modules",
			"!github"
		]
	},

	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2
	},

	"linter": {
		"enabled": true,
		"rules": {
			"nursery": {
				"useSortedClasses": {
					"level": "warn",
					"fix": "safe",
					"options": {
						"attributes": ["classList"],
						"functions": ["clsx", "cva", "tw", "tw.*"]
					}
				}
			},

			"style": {
				"useExponentiationOperator": "off"
			}
		}
	},

	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "single",
			"indentWidth": 2
		}
	},

	"html": {
		"experimentalFullSupportEnabled": true,
		"formatter": {
			"indentScriptAndStyle": true,
			"enabled": true,
			"indentWidth": 2
		}
	},

	"css": {
		"parser": { "tailwindDirectives": true },

		"formatter": {
			"enabled": true,
			"quoteStyle": "single",
			"indentWidth": 2
		}
	},

	"json": {
		"formatter": {
			"enabled": true,
			"indentWidth": 2
		}
	},

	"overrides": [
		{
			"includes": ["**/*.svelte", "**/*.astro", "**/*.vue"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off",
						"useImportType": "off"
					},
					"correctness": {
						"noUnusedVariables": "off",
						"noUnusedImports": "off"
					}
				}
			}
		}
	]
}
