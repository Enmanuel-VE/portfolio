{
	"$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},

	"files": {
		"ignoreUnknown": true,
		"includes": [
			"src/**/*",
			"public/**/*",
			"!**/dist",
			"!**/node_modules",
			"!github"
		]
	},

	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2
	},

	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useExponentiationOperator": "off"
			}
		}
	},

	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "single",
			"indentWidth": 2
		}
	},

	"html": {
		"experimentalFullSupportEnabled": true,
		"formatter": {
			"indentScriptAndStyle": true,
			"enabled": true,
			"indentWidth": 2
		}
	},

	"css": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "single",
			"indentWidth": 2
		},
		"parser": {
			"tailwindDirectives": true
		}
	},

	"json": {
		"formatter": {
			"enabled": true,
			"indentWidth": 2
		}
	},

	"overrides": [
		{
			"includes": ["**/*.astro"],
			"assist": {
				"enabled": true,
				"actions": {
					"source": {
						"organizeImports": "off"
					}
				}
			},
			"linter": {
				"rules": {
					"nursery": {
						"useSortedClasses": {
							"level": "info",

							"options": {
								"attributes": ["class", "className"],
								"functions": ["clsx", "cva", "tw", "tw.*"]
							}
						}
					},
					"style": {
						"useConst": "off",
						"useImportType": "off"
					},
					"correctness": {
						"noUnusedVariables": "off",
						"noUnusedImports": "off"
					}
				}
			}
		}
	]
}
